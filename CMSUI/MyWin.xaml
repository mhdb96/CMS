                Style="{StaticResource AccentedSquareButtonStyle}" FontFamily="Segoe UI Light" FontWeight="Normal" FontSize="14"/>
        <TextBox Controls:TextBoxHelper.Watermark="Enter your name"
                 Controls:TextBoxHelper.ClearTextButton="True"
                 HorizontalAlignment="Left" Height="23" Margin="450,106,0,0" 
                 TextWrapping="Wrap" VerticalAlignment="Top" Width="300" 
                 />



    </Grid>
